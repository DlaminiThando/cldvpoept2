@model IEnumerable<EventEase.Models.Venues>

@{
    ViewData["Title"] = "Venues";
}

<div class="container">
    <h1 class="my-4 text-center text-success">Venue Management</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-success" asp-action="Create">Create New Venue</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().VenueName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Location)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Capacity)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>Venue Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VenueName</td>
                            <td>@item.Location</td>
                            <td>@item.Capacity</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ImageURL))
                                {
                                    <img src="@item.ImageURL"
                                         alt="Image of @item.VenueName"
                                         width="100"
                                         height="100"
                                         class="img-thumbnail"
                                         style="object-fit: cover; border-radius: 12px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.VenueID">Edit</a>
                                <a class="btn btn-sm btn-info me-1" asp-action="Details" asp-route-id="@item.VenueID">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
